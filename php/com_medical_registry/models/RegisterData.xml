<?xml version="1.0" encoding="UTF-8"?>
<form addrulepath="/components/com_medical_registry/models/rules">
    <fields name="REG_PERSONAL_INFORMATION">
        <fieldset name="PatientPersonalData"> 
            <field
                    type="text"
                    name="surname"
                    id="surname"
                    label="REG_SURNAME"
                    description="REG_PATIENT"
                    required="true" 
                    message="REG_CHECK_THE_NAME"
                    size="40"
                    maxLength="255" />
            <field
                    type="text"
                    name="name"
                    id="name"
                    label="REG_NAME"
                    description="REG_PATIENT"
                    required="true" 
                    message="REG_CHECK_THE_NAME"
                    size="40"
                    maxLength="255" />
           <field
                    type="text"
                    name="patronymic"
                    id="patronymic"
                    label="REG_PATRONYMIC"
                    description="REG_PATIENT"
                    size="40"
                    maxLength="255" />
            <field
                    type="data"
                    name="data_of_birth"
                    id="data_of_birth"
                    label="REG_DATE_OF_BIRTH"
                    description="REG_PATRONYMIC"
                    size="10"
                    required="true"
                    validate="date" 
                    message="REG_CHECK_THE_DATE_OF_BIRTH_OF_THE_PATIENT_YYYY-MM-DD"/>
           <field
                    name="mail"
                    type="email"
                    label="REG_EMAIL"
                    description="REG_MAIL_PATIENT_COMMUNICATION"
                    size="30"
                    class="inputbox"
                    validate="email"
                    message="REG_CHECK_EMAIL" />
           <field
                    type="tel"
                    name="phone"
                    id="phone_login"
                    label="REG_PHONE"
                    description="REG_FOR_COMMUNICATION_WITH_THE_PATIENT"
                    message="REG_CHECK_THE_PHONE"
                    size="40"
                    maxLength="255" 
                    filter="tel"/>
        	<field
                    type="text"
                    name="country"
                    id="country"
                    label="REG_COUNTRY"
                    description="REG_THE_PATIENT'S_RESIDENCE"
                    size="30"
                    maxLength="255"
                    required="true" 
                    message="REG_CHECK_THE_COUNTRY_OF_RESIDENCE_OF_THE_PATIENT"/> 
            <field
                    type="text"
                    name="region"
                    id="region"
                    label="REG_REGION"
                    description="REG_THE_PATIENT'S_RESIDENCE"
                    size="30"
                    maxLength="255"
                    required="true" 
                    message="REG_CHECK_THE_AREA_OF_THE_PATIENT'S_RESIDENCE"/>
            <field
                    type="text"
                    name="district"
                    id="district"
                    label="REG_DISTRICT"
                    description="REG_THE_PATIENT'S_RESIDENCE"
                    size="30"
                    maxLength="255"
                    required="true" 
                    message="REG_CHECK_THE_PATIENT'S_AREA_OF_RESIDENCE"/>
            <field
                    type="text"
                    name="city"
                    id="city"
                    label="REG_CITY"
                    description="REG_THE_PATIENT'S_RESIDENCE"
                    size="30"
                    maxLength="255" 
                    message="REG_CHECK_THE_CITY_OF_RESIDENCE_OF_THE_PATIENT"/>
            <field
                    type="text"
                    name="village"
                    id="village"
                    label="REG_VILLAGE"
                    description="REG_THE_PATIENT'S_RESIDENCE"
                    size="30"
                    maxLength="255" 
                    message="REG_CHECK_OUT_THE_VILLAGE_OF_RESIDENCE_OF_THE_PATIENT"/>
             <field
                    type="text"
                    name="street"
                    id="street"
                    label="Улица, дом"
                    description="REG_THE_PATIENT'S_RESIDENCE"
                    size="70"
                    maxLength="255"/>
            <field
                    type="sql"
                    name="id_type"
                    id="id_type"
                    label="REG_TYPE_OF_CONSULTATION"
                    description="REG_PATIENT"
                    required="true"
                    query="SELECT
                            *
                            FROM
                            #__registry_type"
                    key_field="id_type"
                    value_field="type" /> 
            <field
                    type="textarea"
                    name="description_recording"
                    id="description_recording"
                    label="REG_SHORT_DESCRIPTION_OF_THE_PURPOSE_MAKE_AN_APPOINTMENT"
                    description="REG_PATIENT"
                    rows="9"
                    cols="30"
                    required="true" 
                    message="REG_CHECK_THE_SHORT_DESCRIPTION_OF_THE_PURPOSE_OF_THE_APPOINTMENT"/>
            </fieldset>     
    </fields> 
</form>