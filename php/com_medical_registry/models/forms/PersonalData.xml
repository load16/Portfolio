<?xml version="1.0" encoding="UTF-8"?>
<form addrulepath="/components/com_medical_registry/models/rules">
    <fields name="REG_PERSONAL_INFORMATION">
        <fieldset name="PersonalDataFieldSet"> 
            <field
                    type="text"
                    name="login_login"
                    id="login_login"
                    label="REG_LOGIN"
                    description="REG_THIS_COMBINATION_OF_CHARACTERS_FOR_A_USER_ACCOUNT"
                    required="true" 
                    message="REG_CHECK_THE_LOGIN"
                    size="40"
                    maxLength="255" />
            <field
                    type="password"
                    name="pass_login"
                    id="pass_login"
                    label="REG_PASSWORD"
                    description="REG_IT IS_A_SECRET_COMBINATION_OF_CHARACTERS_FOR_THE_USER"
                    size="40"
                    maxLength="255" />
            <field
                    type="text"
                    name="surname_login"
                    id="surname_login"
                    label="REG_SURNAME"
                    description="REG_USER_IN_THE_SYSTEM"
                    required="true" 
                    message="REG_CHECK_THE_SURNAME"
                    size="40"
                    maxLength="255" />
            <field
                    type="text"
                    name="name_login"
                    id="name_login"
                    label="REG_NAME"
                    description="REG_USER_IN_THE_SYSTEM"
                    required="true" 
                    message="REG_CHECK_THE_NAME"
                    size="40"
                    maxLength="255" />
           <field
                    type="text"
                    name="patronymic_login"
                    id="patronymic_login"
                    label="REG_PATRONYMIC"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="40"
                    maxLength="255" />
           <field
                    name="post_login"
                    type="email"
                    label="REG_EMAIL"
                    description="REG_EMAIL_OF_THE_USER_FOR_COMMUNICATION"
                    required="true"
                    size="30"
                    class="inputbox"
                    validate="email"
                    message="REG_CHECK_EMAIL@" />
           <field
                    type="tel"
                    name="phone_login"
                    id="phone_login"
                    label="REG_PHONE"
                    description="REG_FOR_COMMUNICATION_WITH_THE_USER"
                    message="REG_CHECK_THE_PHONE"
                    size="40"
                    maxLength="255" 
                    filter="tel"/>
           <field
                    type="text"
                    name="skype_login"
                    id="skype_login"
                    label="REG_SKYPE"
                    description="REG_FOR_A_CONSULTATION_OF_USERS_ON_SKYPE"
                    required="true" 
                    message="REG_CHECK_THE_SKYPE"
                    size="60"
                    maxLength="200" />
           <field
                    type="time"
                    name="time_login"
                    id="id_time_login"
                    label="REG_DURATION_OF_RECEPTION_A_PATIENT"
                    description="REG_WHICH_IS_TAKEN_INTO_ACCOUNT_WHEN_CALCULATING_THE_POSITION_TO_MAKE_AN_APPOINTMENT"
                    size="5"
                    maxLength="5"
                    required="true"
                    readonly="true"  
                    message="REG_CHECK_THE_DURATION_OF_THE_ADMISSION_OF_A_PATIENT_HH_MM_SS"/>
           <field
                    name="id_specialty_login"
                    type="sql"
                    query="SELECT
                            id_specialty,
                            ru_specialty
                            FROM
                            #__registry_specialty"
                    label="REG_SELECTING_SPECIALIZATION"
                    description="REG_USER_TO_GENERATE_SCHEDULES" 
                    key_field="id_specialty"
                    value_field="ru_specialty" />
           </fieldset>
           
    </fields>
    <fields name="REG_DATA_MODIFIED_ADMIN">
        <fieldset name="PersonalDataAreNotFieldSet"> 
            <field
                    type="text"
                    name="id_login"
                    id="id_login"
                    label="REG_USER_ID"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="10"
                    maxLength="255" 
                    disabled="true"/>
            <field
                    type="sql"
                    name="id_activation_login"
                    id="id_activation_login"
                    label="REG_STATUS"
                    description="REG_USER_IN_THE_SYSTEM"
                    query="SELECT
                            id_activation,
                            name_activation
                            FROM
                            #__registry_activation"
                    key_field="id_activation"
                    value_field="name_activation" 
                    disabled="true"/>
            <field
                    type="sql"
                    name="id_role_login"
                    id="id_role_login"
                    label="REG_ROLE"
                    description="REG_USER_IN_THE_SYSTEM"
                    query="SELECT
                            id_role,
                            name_role
                            FROM
                            #__registry_role"
                    key_field="id_role"
                    value_field="name_role" 
                    disabled="true"/>
            <field
                    type="sql"
                    name="id_sex_login"
                    id="id_sex_login"
                    label="REG_SEX_THE_PERSON"
                    description="REG_USER_IN_THE_SYSTEM"
                    query="SELECT
                            id_sex,
                            sex_ru
                            FROM
                            #__registry_sex"
                    key_field="id_sex"
                    value_field="sex_ru" 
                    disabled="true"/>
            </fieldset> 
    </fields>
    <fields name="REG_SERVICE_INFORMATION">
        <fieldset name="ServiceDataFieldSet">        
            <field
                    type="sql"
                    name="id_create_login"
                    id="id_create_login"
                    label="REG_CREATOR"
                    description="REG_ACCOUNT_OF_THE_USER"
                    query="SELECT
                            id_login,
                            surname_login
                            FROM
                            #__registry_login"
                    key_field="id_login"
                    value_field="surname_login" 
                    disabled="true"/>  
           <field
                    type="text"
                    name="data_create_login"
                    id="data_create_login"
                    label="REG_CREATED_DATE"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="time_create_login"
                    id="time_create_login"
                    label="REG_CREATION_TIME"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="ip_create_login"
                    id="ip_create_login"
                    label="REG_THE_IP_CREATOR"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="30" 
                    disabled="true"/>                
           <field
                    type="sql"
                    name="id_modification_login"
                    id="id_modification_login"
                    label="REG_MODIFICATOR"
                    description="REG_USER_IN_THE_SYSTEM"
                    query="SELECT
                            id_login,
                            surname_login
                            FROM
                            #__registry_login"
                    key_field="id_login"
                    value_field="surname_login" 
                    disabled="true"/>         
           <field
                    type="text"
                    name="date_modification_login"
                    id="date_modification_login"
                    label="REG_DATE_OF_MODIFICATION"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="time_modification_login"
                    id="time_modification_login"
                    label="REG_THE_TIME_OF_MODIFICATION"
                    description="REG_USER_IN_THE_SYSTEM"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="ip_modification_login"
                    id="ip_modification_login"
                    label="REG_IP_MODIFICATOR"
                    description="REG_USER_IN_THE_SYSTEM" 
                    size="30" 
                    disabled="true"/>
           </fieldset>
    </fields> 
</form>