<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="REG_SCHEDULE">
        <fieldset name="ScheduleFieldSet">
            <field
                    type="text"
                    name="date_schedule"
                    label="REG_DATE"
                    description="REG_THE_BEGINNING_OF_FORMATION_OF_THE_SCHEDULE"
                    size="8"
                    maxLength="8"
                    disabled="true" /> 
            <field
                    type="time"
                    name="with_schedule"
                    id="id_with_schedule"
                    size="5"
                    label="REG_THE_BEGINNING_OF_THE_RECEPTION"
                    description="REG_THE_BEGINNING_OF_FORMATION_OF_THE_SCHEDULE" 
                    readonly="true" 
                    required="true" />
            <field
                    type="time"
                    name="to_schedule"
                    id="to_with_schedule"
                    size="5"
                    label="REG_THE_END_OF_THE_RECEPTION"
                    description="REG_THE_END_OF_THE_RECEPTION_FOR_THE_FORMATION_SCHEDULE"
                    readonly="true" 
                    required="true" />
            <field
                    type="textarea"
                    name="cabinet_schedule"
                    label="REG_THE_RECEIVE_LOCATION"
                    description="REG_WHERE_WILL_THE_PATIENTS"
                    rows="5"
                    cols="30"
                    size="80"
                    maxLength="80" 
                    required="true" />
            <field
                    type="checkbox"
                    name="hidden_flag_schedule"
                    label="REG_HIDDEN_SCHEDULE"
                    description="REG_WHICH_IS_NOT_DISPLAYED_FOR_PATIENTS"
                    value="1"/>
           </fieldset>
    </fields>
    <fields name="REG_SERVICE_INFORMATION">
        <fieldset name="ServiceDataFieldSet">       
            <field
                    name="id_create_schedule"
                    label="REG_CREATOR"
                    description="REG_SCHEDULEN"  
                    type="sql"
                    query="SELECT
                            id_login,
                            surname_login
                            FROM
                            #__registry_login"
                    key_field="id_login"
                    value_field="surname_login" 
                    disabled="true"/>        
           <field
                    type="text"
                    name="data_create_schedule"
                    label="REG_CREATED_DATE"
                    description="REG_SCHEDULEN"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="time_create_schedule"
                    label="REG_CREATION_TIME"
                    description="REG_SCHEDULEN"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="ip_create_schedule"
                    label="REG_THE_IP_CREATOR"
                    description="REG_SCHEDULEN"
                    size="30" 
                    disabled="true"/>
           <field
                    name="id_modifications_schedule"
                    label="REG_MODIFICATOR"
                    description="REG_SCHEDULEN"
                    type="sql"
                    query="SELECT
                            id_login,
                            surname_login
                            FROM
                            #__registry_login"
                    key_field="id_login"
                    value_field="surname_login" 
                    disabled="true"/>
           <field
                    type="text"
                    name="data_modifications_schedule"
                    label="REG_DATE_OF_MODIFICATION"
                    description="REG_SCHEDULEN"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="time_modifications_schedule"
                    label="REG_THE_TIME_OF_MODIFICATION"
                    description="REG_SCHEDULEN"
                    size="30" 
                    disabled="true"/>
           <field
                    type="text"
                    name="ip_modifications_schedule"
                    label="REG_IP_MODIFICATOR"
                    description="REG_SCHEDULEN" 
                    size="30" 
                    disabled="true"/>
           </fieldset>
    </fields> 
</form>